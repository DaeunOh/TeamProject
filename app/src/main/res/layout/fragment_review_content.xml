<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/fragment_review_content"
    android:background="@color/colorLightGray" android:padding="8dp">

    <ImageView
        android:id="@+id/review_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reviewlist_store"
        android:layout_alignTop="@id/review_image"
        android:layout_toRightOf="@id/review_image"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/reviewlist_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reviewlist_store"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@id/review_image"
        android:textSize="15dip" />

</RelativeLayout>